<launch>

  <!-- Launch Arm-->
  <include file="$(find blue_bringup)/launch/right.launch" />

  <!-- Joint Controller-->
  <group ns="right_arm">
    <node
      name="$(anon blue_controller_spawner)"
      pkg="blue_controller_manager"
      type="spawner.py"
      output="screen">
      <rosparam param="start_controllers">
        - blue_controllers/gripper_controller
        - blue_controllers/joint_position_controller
      </rosparam>
    </node>
  </group>

  <node
    name="gui"
    pkg="rqt_gui"
    type="rqt_gui" />

   <node pkg="rosbag" type="record" name="rosbag_record_benchmark"
     args="record -o 
     /right_arm/joint_states 
     /right_arm/blue_controllers/joint_position_controller/command 
     /right_arm/motor_states 
     /base_tracker_link 
    if="$(arg record_cameras)" />

</launch>
