<launch>

  <!-- Teleop nodes -->
  <node
    name="vive_teleop"
    pkg="blue_teleop"
    type="vive_teleop.py" />

  <node
    name="rviz_teleop"
    pkg="blue_teleop"
    type="rviz_teleop" />

  <!-- Inverse kinematics -->
  <node
    name="teleop_inverse_kinematics"
    pkg="blue_teleop"
    type="teleop_inverse_kinematics" />

  <!-- Start necessary controllers -->
  <node
    name="$(anon blue_controller_spawner)"
    pkg="blue_controller_manager"
    type="spawner.py"
    output="screen">
    <rosparam param="start_controllers">
      - blue_controllers/gripper_controller
      - blue_controllers/joint_ctc
    </rosparam>
  </node>

</launch>
